    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sort-class-members": "1.20.0",
    "eslint-plugin-unused-imports": "3.0.0",
    "gitlab-ci-local": "4.46.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "prettier": "3.0.0",
    "prisma": "5.16.1",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3"
